<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Soundchaser.TagTools.Maui.ViewModels"
             xmlns:conv="clr-namespace:Soundchaser.TagTools.Maui.Converters"
             x:Class="Soundchaser.TagTools.Maui.Views.Panes.PaneColumnView">
    <ContentView.Resources>
        <conv:AttentionStateToColorConverter x:Key="AttentionStateToColor" />
    </ContentView.Resources>
    <Border Stroke="{AppThemeBinding Light={StaticResource PaneBorderLight}, Dark={StaticResource PaneBorderDark}}"
            StrokeThickness="1"
            WidthRequest="220"
            Margin="0,0,1,0">
        <Grid RowDefinitions="Auto,*">
            <Label Grid.Row="0"
                   Text="{Binding Title}"
                   FontAttributes="Bold"
                   Padding="8,6"
                   BackgroundColor="{AppThemeBinding Light={StaticResource PaneHeaderLight}, Dark={StaticResource PaneHeaderDark}}" />
            <CollectionView Grid.Row="1"
                            ItemsSource="{Binding Items}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedItem}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:PaneItemViewModel">
                        <Grid Padding="8,6"
                              BackgroundColor="{Binding AttentionState, Converter={StaticResource AttentionStateToColor}}">
                            <Label Text="{Binding Name}"
                                   LineBreakMode="TailTruncation" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Border>
</ContentView>
