<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Soundchaser.TagTools.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Soundchaser.TagTools.Maui.Views"
    Title="Soundchaser TagTools"
    FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="200"
              BackgroundColor="{StaticResource Primary}">
            <Label Text="Soundchaser&#x0a;TagTools"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Databases" Icon="dotnet_bot.png">
        <ShellContent Route="DatabasesPage"
                      ContentTemplate="{DataTemplate views:DatabasesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Playlists" Icon="dotnet_bot.png">
        <ShellContent Route="PlaylistsPage"
                      ContentTemplate="{DataTemplate views:PlaylistsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="History" Icon="dotnet_bot.png">
        <ShellContent Route="HistoryPage"
                      ContentTemplate="{DataTemplate views:HistoryPage}" />
    </FlyoutItem>

    <MenuItem Text="Settings"
              Command="{Binding GoToSettingsCommand}" />

</Shell>
